------para eliminar
delete from libros 
where isbn = 'a';
select L.isbn , L.titulo, E.id, E.nombre
from libros as L
join editorial as E on L.editorial_id = E.id 

--Para editar el libro
UPDATE libros SET titulo = 'Señales HR' WHERE titulo = 'Señales y Sistemas';
UPDATE Editorial SET nombre = 'Porrua' WHERE nombre = 'Prentice';
select L.isbn , L.titulo, E.id, E.nombre
from libros as L
join editorial as E on L.editorial_id = E.id 
order by  L.isbn
